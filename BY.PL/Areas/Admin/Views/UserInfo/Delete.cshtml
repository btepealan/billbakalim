@model BY.Entity.Identity.ApplicationUser

@{
    ViewBag.Title = "Delete";
}

<div style="margin-top:100px">


    <h3>Bu oyuncuyu silmek istediğinize emin misiniz?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Adı")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayName("Soyadı")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Surname)
            </dd>

            <dt>
                @Html.DisplayName("Oyun Sayısı")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Counter)
            </dd>

            <dt>
                @Html.DisplayName("Hesap Numarası")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AccountNo)
            </dd>

            <dt>
                @Html.DisplayName("E-Mail")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayName("Telefon Numarası")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>

            <dt>
                @Html.DisplayName("Kullanıcı Adı")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-default" /> |
                @Html.ActionLink("Geri Dön", "Index")
            </div>
        }
    </div>
</div>