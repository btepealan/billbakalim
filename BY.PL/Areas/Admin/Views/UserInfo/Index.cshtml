@model IEnumerable<BY.Entity.Identity.ApplicationUser>

@{
    ViewBag.Title = "Index";
}
<div style="margin-top:100px">
    <h2>Oyuncu Listesi</h2>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("İsim")
            </th>
            <th>
                @Html.DisplayName("Soyisim")
            </th>
            <th>
                @Html.DisplayName("Yarışma Sayısı")
            </th>
            <th>
                @Html.DisplayName("Hesap Numarası")
            </th>
            <th>
                @Html.DisplayName("E-Mail")
            </th>
            <th>
                @Html.DisplayName("Telefon Numarası")
            </th>
            <th>
                @Html.DisplayName("Kullanıcı Adı")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Counter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detay", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    <div>
        @Html.ActionLink("Geri Dön", "Index", "Default")
    </div>
</div>